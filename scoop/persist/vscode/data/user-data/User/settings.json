{
    // Core
    "workbench.colorTheme": "One Dark Pro",
    "workbench.iconTheme": "material-icon-theme",
    "diffEditor.maxComputationTime": 0,
    "terminal.integrated.profiles.windows": {
        "pwsh": {
            "path": "D:\\scoop\\apps\\pwsh\\current\\pwsh.exe"
        }
    },
    "terminal.integrated.defaultProfile.windows": "pwsh",
    "terminal.integrated.fontFamily": "CaskaydiaCove Nerd Font",
    "terminal.integrated.fontWeight": 325,
    "editor.fontWeight": 325,
    "editor.fontFamily": "CaskaydiaCove Nerd Font",
    "editor.lineHeight": 1.5,
    "git.confirmSync": false,
    "editor.formatOnSave": true,
    "editor.linkedEditing": true,
    "files.trimTrailingWhitespace": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.detectIndentation": false,
    "files.encoding": "utf8",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "terminal.integrated.suggest.enabled": true,
    "terminal.integrated.stickyScroll.enabled": true,
    "editor.stickyTabStops": true,
    // Python
    "python.analysis.autoImportCompletions": true,
    "python.analysis.fixAll": ["source.unusedImports"],
    "files.exclude": {
        "**/__pycache__": true,
        "**/.cache": true,
        "**/.coverage": true,
        "**/.coverage.*": true,
        "**/.hypothesis": true,
        "**/.mypy_cache": true,
        "**/.nox": true,
        "**/.pytest_cache": true,
        "**/.ruff_cache": true,
        "**/.tox": true
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "isort.args": ["--profile", "black"],
    "python.terminal.activateEnvironment": true,
    // Powershell
    "powershell.powerShellAdditionalExePaths": {
        "pwsh": "D:\\scoop\\apps\\pwsh\\current\\pwsh.exe"
    },
    "powershell.powerShellDefaultVersion": "pwsh",
    "[powershell]": {
        "editor.defaultFormatter": "ms-vscode.powershell"
    },
    // Vim
    "vim.easymotion": true,
    "vim.easymotionKeys": "asdfghjkl;",
    "vim.easymotionMarkerBackgroundColor": "#282c34cc", // 主题背景色带透明，柔和不突兀
    "vim.easymotionMarkerForegroundColorOneChar": "#61afef", // 蓝青，强调单字符标记
    "vim.easymotionMarkerForegroundColorTwoCharFirst": "#c678dd", // 紫色，轻盈醒目
    "vim.easymotionMarkerForegroundColorTwoCharSecond": "#e06c75", // 珊瑚红，区分第二字符
    "vim.easymotionIncSearchForegroundColor": "#98c379", // 绿色，突显搜索匹配
    "vim.easymotionDimColor": "#5c6370", // 灰色，One Dark Pro 的注释色
    "vim.easymotionDimBackground": true,
    "vim.leader": "<Space>",
    "vim.useSystemClipboard": true,
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.shell": "D:\\scoop\\apps\\pwsh\\current\\pwsh.exe",
    "vim.camelCaseMotion.enable": true,
    "vim.autoSwitchInputMethod.enable": true,
    "vim.autoSwitchInputMethod.defaultIM": "2052-0",
    "vim.autoSwitchInputMethod.obtainIMCmd": "D:\\scoop\\apps\\im-select-imm\\current\\im-select-imm.exe",
    "vim.autoSwitchInputMethod.switchIMCmd": "D:\\scoop\\apps\\im-select-imm\\current\\im-select-imm.exe {im}",
    "vim.replaceWithRegister": true,
    "vim.foldfix": true,
    // Others
    "filename-lint.enabled": true,
    "github.copilot.nextEditSuggestions.enabled": true,
    "prettier.tabWidth": 4,
    "indentRainbow.indicatorStyle": "light",
    "pangu.auto_format_on_save": true,
    // Leetcode
    "labuladong-leetcode.workspaceFolder": "",
    "labuladong-leetcode.endpoint": "leetcode",
    "labuladong-leetcode.filePath": {
        "default": {
            "folder": "",
            "filename": "${id}.${cn_name}.${ext}"
        }
    },
    "labuladong-leetcode.defaultLanguage": "python3",
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    }
}
