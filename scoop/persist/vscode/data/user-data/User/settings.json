{
    // Core
    "workbench.colorTheme": "One Dark Pro",
    "workbench.iconTheme": "material-icon-theme",
    "diffEditor.maxComputationTime": 0,
    "terminal.integrated.profiles.windows": {
        "pwsh": {
            "path": "D:\\scoop\\apps\\pwsh\\current\\pwsh.exe"
        }
    },
    "terminal.integrated.defaultProfile.windows": "pwsh",
    "git.confirmSync": false,
    "editor.formatOnSave": true,
    "editor.linkedEditing": true,
    "files.trimTrailingWhitespace": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.detectIndentation": false,
    "files.encoding": "utf8",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "terminal.integrated.suggest.enabled": true,
    "terminal.integrated.stickyScroll.enabled": true,
    "editor.stickyTabStops": true,
    // Python
    "python.analysis.autoImportCompletions": true,
    "python.analysis.fixAll": ["source.unusedImports"],
    "files.exclude": {
        "**/__pycache__": true,
        "**/.cache": true,
        "**/.coverage": true,
        "**/.coverage.*": true,
        "**/.hypothesis": true,
        "**/.mypy_cache": true,
        "**/.nox": true,
        "**/.pytest_cache": true,
        "**/.ruff_cache": true,
        "**/.tox": true
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "isort.args": ["--profile", "black"],
    "python.terminal.activateEnvironment": true,
    // Powershell
    "powershell.powerShellAdditionalExePaths": {
        "pwsh": "D:\\scoop\\apps\\pwsh\\current\\pwsh.exe"
    },
    "powershell.powerShellDefaultVersion": "pwsh",
    "[powershell]": {
        "editor.defaultFormatter": "ms-vscode.powershell"
    },
    // Vim
    "vscode-neovim.neovimExecutablePaths.win32": "D:\\scoop\\apps\\neovim\\current\\bin\\nvim.exe",
    // Others
    "filename-lint.enabled": true,
    "github.copilot.nextEditSuggestions.enabled": true,
    "prettier.tabWidth": 4,
    "indentRainbow.indicatorStyle": "light",
    "pangu.auto_format_on_save": true,
    // Leetcode
    "labuladong-leetcode.workspaceFolder": "",
    "labuladong-leetcode.endpoint": "leetcode",
    "labuladong-leetcode.filePath": {
        "default": {
            "folder": "",
            "filename": "${id}.${cn_name}.${ext}"
        }
    },
    "labuladong-leetcode.defaultLanguage": "python3",
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    }
}
