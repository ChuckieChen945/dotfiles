[diff]
    tool = default-difftool
[difftool "default-difftool"]
    cmd = code --wait --diff $LOCAL $REMOTE
[merge]
    tool = vscode
[mergetool "vscode"]
    cmd = code --wait $MERGED
[http]
    proxy = http://127.0.0.1:10808
[https]
    proxy = https://127.0.0.1:10808
[safe]
    directory = *
[credential]
