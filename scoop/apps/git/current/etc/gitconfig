[core]
    symlinks = true
    autocrlf = true
    fscache = true
    editor = code --wait
    # 忽略转义字符
    protectNTFS = false
    # 禁用换行符转换
    autocrlf = false
    # 中文文件名，乱码问题。设为false的话，就不会对0x80以上的字符进行quot
    quotepath = false
[color]
    interactive = true
    ui = auto
[user]
